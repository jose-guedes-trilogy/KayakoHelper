{
  "name": "Kayako Helper",
  "description": "Every AI-first Agent's best friend.",
  "version": "1.0.0",
  "manifest_version": 3,

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "Kayako Helper",
    "default_popup": "dist/popup.html"
    },

  "content_scripts": [
    {
      "matches": ["https://*.kayako.com/*"],
      "js": ["dist/tagCleanerInjector.js"],
      "run_at": "document_start",
      "type": "module"
    },
    {
      "matches": ["https://*.kayako.com/*"],
      "js": ["dist/contentKayako.js"],
      "css": ["dist/content.css"],
      "run_at": "document_idle",
      "type": "module"
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["dist/contentGemini.js"],
      "run_at": "document_idle",
      "type": "module"
    },
    {
      "matches": [
        "https://*.chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["dist/contentChatGPT.js"],
      "run_at": "document_idle",
      "type": "module"
    },
    {
      "matches": [
        "https://ephor.ai/*",
        "https://*.ephor.ai/*"
      ],
      "js": ["dist/contentEphor.js"],
      "run_at": "document_idle",
      "type": "module"
    }
  ],

  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },

  "host_permissions": [
    "https://*.kayako.com/*",
    "https://*.chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://push.clients6.google.com/*",
    "https://content-push.googleapis.com/upload/",
    "https://gemini.google.com/*",
    "https://ephor.ai/*",
    "https://*.ephor.ai/*"
  ],

  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "activeTab",
    "clipboardWrite"
  ],

  "web_accessible_resources": [
    {
      "resources": ["dist/*"],
      "matches": [
        "https://*.kayako.com/*",
        "https://*.chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*"]
    }
  ]
}
